@model List<WebApplication1.Models.Client>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>FirstName</th>
            <th>Addresse</th>
            <th>Supprimer</th>
            <th>Modifier</th>
        </tr>
    </thead>
    <tbody>
        @foreach(WebApplication1.Models.Client client in Model){
        <tr>
            <td>@client.Id</td>
            <td>@client.Name</td>
            <td>@client.FirstName</td>
            <td>@client.Address</td>
            <td>@Html.ActionLink("Supprimer", "DeleteClient", "Home", new { target = client })</td>
            <td>@Html.ActionLink("Modifier", "UpdateClientView", "Home", new { target = client })</td>
        </tr>
        }
    </tbody>
</table>

