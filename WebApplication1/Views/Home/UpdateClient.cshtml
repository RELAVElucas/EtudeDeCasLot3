@model WebApplication1.Models.Client
    <div class="container">
        @using (Html.BeginForm("UpdateClient", "Home", FormMethod.Post))
        {
            <h3>Modifier un client</h3>
            <div class="form-group row" read>
                <div class="col-4">@Html.LabelFor(m => m.Id)</div>
                <div class="col-4">@Html.TextBoxFor(m => m.Id, new { @readonly = "readonly" })</div>
            </div>
            <div class="form-group row">
                <div class="col-4"> @Html.LabelFor(m => m.Name)</div>
                <div class="col-4">@Html.TextBoxFor(m => m.Name)</div>
            </div>
            <div class="form-group row">
                <div class="col-4">@Html.LabelFor(m => m.FirstName)</div>
                <div class="col-4">@Html.TextBoxFor(m => m.FirstName)</div> 
            </div>
            <div class="form-group row">
                <div class="col-4">@Html.LabelFor(m => m.Address)</div>
                <div class="col-4">@Html.TextBoxFor(m => m.Address)</div> 
            </div>
            <input class="btn btn-primary" type="submit" value="Modifier le client" />
        }
    </div>

